---
import Layout from '../layouts/Layout.astro'
import Navigation from '../components/Navigation.astro'

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Blog",
  "name": "Abhay Jain's Ledger",
  "description": "Personal ledger featuring insights on equities and thoughts by Abhay Jain",
  "url": "https://abhayadityajain.com/ledger",
  "author": {
    "@type": "Person",
    "name": "Abhay Jain",
    "url": "https://abhayadityajain.com",
    "sameAs": [
      "https://x.com/abhayjain1000",
      "https://www.linkedin.com/in/abhayadityajain/",
      "https://substack.com/@onfel1000"
    ]
  },
  "publisher": {
    "@type": "Person",
    "name": "Abhay Jain"
  }
}
---

<Layout
  title="My Ledger - Abhay Jain | Investment Analysis & Thoughts"
  description="Abhay Jain's personal ledger featuring insights on equities and thoughts. Read Abhay Jain's analysis on Solara Active Pharma Sciences and thoughts on digital disorder."
  keywords="Abhay Jain, ledger, blog, equities, thoughts, Solara Active, investment analysis, stock analysis"
  ogTitle="My Ledger - Abhay Jain"
  ogDescription="Abhay Jain's personal ledger featuring insights on equities and thoughts."
  canonicalURL="https://www.abhayadityajain.com/ledger"
  structuredData={structuredData}
>
  <Navigation />
  
  <!-- Breadcrumb Navigation -->
  <nav aria-label="Breadcrumb" class="breadcrumb">
    <a href="/">Home</a> <span class="separator">/</span> <span class="current">Ledger</span>
  </nav>
  
  <div class="back-link">
    <a href="/">‚Üê back home</a>
  </div>

  <h1>my ledger</h1>

  <h2>equities</h2>
  
  <div class="entry">
    <a href="/laurus-labs">Laurus Labs Ltd. - Bullish</a>
  </div>
  
  <div class="entry">
    <a href="/motilal-oswal">Motilal Oswal Financial Services - Bullish</a>
  </div>
  
  <div class="entry">
    <a href="/solara-active">Solara Active Pharma Sciences Ltd - Bullish</a>
  </div>

  <h2>thoughts</h2>
  
  <div class="entry">
    <a href="/digital-disorder">A Mind Taken Hostage</a>
  </div>
</Layout>

<style>
  body {
    font-family: 'Times New Roman', Times, serif;
    line-height: 1.8;
    color: #fff;
    background: #000;
    max-width: 1000px;
    margin: 40px auto;
    padding: 60px;
    font-size: 1.2rem;
  }

  h1 {
    font-size: 2.8rem;
    font-weight: bold;
    margin-bottom: 30px;
    text-decoration: underline;
    line-height: 1.2;
  }

  h2 {
    font-size: 2rem;
    font-weight: bold;
    margin-top: 50px;
    margin-bottom: 25px;
    color: #fff;
    line-height: 1.3;
  }

  .breadcrumb {
    font-size: 0.9rem;
    margin-bottom: 20px;
    color: #ccc;
  }

  .breadcrumb a {
    color: #ccc;
  }

  .separator {
    margin: 0 8px;
  }

  .current {
    color: #fff;
  }

  .back-link {
    font-size: 1rem;
    margin-bottom: 40px;
  }

  p {
    margin-bottom: 25px;
  }

  .entry {
    margin-bottom: 30px;
    border-left: 3px solid purple;
    padding-left: 15px;
  }

  .entry-date {
    font-size: 1rem;
    color: #ccc;
    margin-bottom: 10px;
  }

  .entry-content {
    font-size: 1.2rem;
  }

  a {
    color: #fff;
    text-decoration: underline;
  }

  a:hover {
    color: #ccc;
  }

  .section {
    margin-bottom: 25px;
  }

  @media (max-width: 768px) {
    body {
      padding: 30px 20px;
      font-size: 1.1rem;
    }
    
    h1 {
      font-size: 2.4rem;
    }
    
    h2 {
      font-size: 1.8rem;
    }
  }
</style>