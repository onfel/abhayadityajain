---
import Layout from './Layout.astro'
import Navigation from '../components/Navigation.astro'

export interface Props {
  frontmatter: {
    title: string
    description: string
    keywords: string
    publishedTime: string
    author: string
    section: string
  }
  url: string
}

const { frontmatter, url } = Astro.props

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": frontmatter.title,
  "description": frontmatter.description,
  "url": url,
  "datePublished": frontmatter.publishedTime,
  "dateModified": frontmatter.publishedTime,
  "author": {
    "@type": "Person",
    "name": frontmatter.author,
    "url": "https://abhayadityajain.com",
    "sameAs": [
      "https://x.com/abhayjain1000",
      "https://www.linkedin.com/in/abhayadityajain/",
      "https://substack.com/@onfel1000"
    ]
  },
  "publisher": {
    "@type": "Person",
    "name": "Abhay Jain"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": url
  },
  "articleSection": frontmatter.section,
  "keywords": frontmatter.keywords.split(', ')
}

// Format date for display
const publishedDate = new Date(frontmatter.publishedTime).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).toLowerCase()
---

<Layout
  title={`${frontmatter.title} - Abhay Jain | Critical Thinking & Metacognition`}
  description={frontmatter.description}
  keywords={frontmatter.keywords}
  ogTitle={`${frontmatter.title} - Abhay Jain`}
  ogDescription={frontmatter.description}
  ogType="article"
  canonicalURL={url}
  publishedTime={frontmatter.publishedTime}
  author={frontmatter.author}
  section={frontmatter.section}
  structuredData={structuredData}
>
  <Navigation />
  
  <!-- Breadcrumb Navigation -->
  <nav aria-label="Breadcrumb" class="breadcrumb">
    <a href="/">Home</a> <span class="separator">/</span> 
    <a href="/ledger">Ledger</a> <span class="separator">/</span> 
    <span class="current">{frontmatter.title}</span>
  </nav>
  
  <div class="back-link">
    <a href="/ledger">‚Üê back to ledger</a>
  </div>

  <article>
    <h1>{frontmatter.title}</h1>
    <div class="date">{publishedDate}</div>
    
    <div class="content">
      <slot />
    </div>
  </article>
</Layout>

<style>
  body {
    font-family: 'Times New Roman', Times, serif;
    line-height: 1.8;
    color: #fff;
    background: #000;
    max-width: 1000px;
    margin: 40px auto;
    padding: 60px;
    font-size: 1.2rem;
  }

  article {
    max-width: none;
  }

  h1 {
    font-size: 2.8rem;
    font-weight: bold;
    margin-bottom: 10px;
    text-decoration: underline;
    line-height: 1.2;
  }

  .date {
    font-size: 1rem;
    color: #ccc;
    margin-bottom: 40px;
    font-style: italic;
  }

  .breadcrumb {
    font-size: 0.9rem;
    margin-bottom: 20px;
    color: #ccc;
  }

  .breadcrumb a {
    color: #ccc;
  }

  .separator {
    margin: 0 8px;
  }

  .current {
    color: #fff;
  }

  .back-link {
    font-size: 1rem;
    margin-bottom: 40px;
  }

  .content {
    text-align: justify;
  }

  .content p {
    margin-bottom: 25px;
    text-align: justify;
  }

  .content h2 {
    font-size: 2rem;
    font-weight: bold;
    margin-top: 50px;
    margin-bottom: 25px;
    color: #fff;
    line-height: 1.3;
  }

  .content h3 {
    font-size: 1.6rem;
    font-weight: bold;
    margin-top: 40px;
    margin-bottom: 20px;
    color: #fff;
    line-height: 1.3;
  }

  .content ul {
    margin-bottom: 25px;
    padding-left: 20px;
  }

  .content li {
    margin-bottom: 10px;
    color: #fff;
  }

  .content strong {
    color: #fff;
    font-weight: bold;
  }

  a {
    color: #fff;
    text-decoration: underline;
  }

  a:hover {
    color: #ccc;
  }

  @media (max-width: 768px) {
    body {
      padding: 30px 20px;
      font-size: 1.1rem;
    }
    
    h1 {
      font-size: 2.4rem;
    }
    
    .content h2 {
      font-size: 1.8rem;
    }
    
    .content h3 {
      font-size: 1.4rem;
    }
    
    .content p {
      text-align: left;
    }
  }
</style>