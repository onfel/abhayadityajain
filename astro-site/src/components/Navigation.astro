---
const currentPath = Astro.url.pathname
---

<nav class="nav" aria-label="Main navigation">
  <a href="/" class={currentPath === '/' ? 'current' : ''}>home</a>
  <a href="/ledger" class={currentPath === '/ledger' ? 'current' : ''}>ledger</a>
  <a href="/about-me" class={currentPath === '/about-me' ? 'current' : ''}>about me</a>
</nav>

<style>
  .nav {
    font-size: 1rem;
    margin-bottom: 40px;
    text-align: center;
  }

  .nav a {
    margin: 0 15px;
    color: #fff;
    text-decoration: underline;
  }

  .nav a:hover {
    color: #ccc;
  }

  .nav a.current {
    color: #ccc;
  }

  @media (max-width: 768px) {
    .nav a {
      margin: 0 10px;
      display: inline-block;
      margin-bottom: 10px;
    }
  }
</style>